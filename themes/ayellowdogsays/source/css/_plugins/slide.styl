.post-list .swiper-slide {
  margin: 0;
  padding: 0 1rem;
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  width: fit-content;
  max-width: 15rem;
  height: 7rem;
  position: relative;
  
  .post-cover {
    left: -1em;
    right: initial;
    bottom: -1em;
  }
  
  .post-title {
    font-size: var(--fsh4);
    margin: 1rem 0 0 4rem;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .meta-cap {
    position: absolute;
    bottom: 1rem;
  }
}

.post-list .swiper {

  
  .swiper-button-prev,
  .swiper-button-next {
    position: absolute;
    top: 46%;
    display: none;
  
    transition: opacity 0.3s ease;
    
    /* Style the buttons */
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(0,0,0,0.5);
    border-radius: 50%;
    color: white;
    
    &::after {
      font-size: 1rem;
    }
  }
  
  &:hover {
    .swiper-button-prev,
    .swiper-button-next {
      display: flex;
      opacity: 1;
    }
  }
  
  @media (max-width: 768px) {
    .swiper-button-prev,
    .swiper-button-next {
      display: none !important;
    }
  }
}
